@using Microsoft.AspNetCore.Identity
@inject SignInManager<BookUser> SignInManager
@inject UserManager<BookUser> UserManager

<ul class="navbar-nav px-3">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item text-nowrap">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hesabım</a>
        </li>
        <li class="nav-item text-nowrap">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">Çıkış Yap</a>
        </li>
    }
    else
    {
        <li class="nav-item text-nowrap">
            <a class="nav-link" asp-area="Identity" asp-page="/Account/Login">Giriş Yap</a>
        </li>
    }
</ul>
