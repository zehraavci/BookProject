@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>
@{
    ViewData["Title"] = "Kullanıcı Rolleri Listesi";
}

<h1>Kullanıcı Rolleri Listesi</h1>
<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Rol Ekle</a>
</p>
<table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <td>Rol ID</td>
            <td>Rol Adı</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Id</td>
                <td>@role.Name</td>
            </tr>

        }
    </tbody>
</table> 