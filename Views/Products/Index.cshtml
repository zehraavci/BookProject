@model SearchViewModel

@{
    ViewData["Title"] = "Kitap Listesi";
}

<h1>Kitap Listesi</h1>
<div class="row">
    <div class="col-md-9">
        <p>
            <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Kitap Ekle</a>
        </p>
    </div>
</div>

<table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Kitap Adı
            </th>
            <th>
                Yazar
            </th>
            <th>
                Yayıncı
            </th>
            <th>
                Açıklama
            </th>
            <th>
                Fiyat
            </th>
            <th>
                ISBN
            </th>
            <th>
                Görsel
            </th>
            <th>
                Kategori
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Result)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Fullname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Publisher.Name)
            </td>
            <td>
                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-html="true" title=" @Html.DisplayFor(modelItem => item.Description)">
                    Açıklama
                </button>
            </td>
    
            <td>
                @Html.DisplayFor(modelItem => item.Price) ₺
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Isbn)
            </td>
            <td>
                <img class="img-fluid" src="~/Image/@item.Image" alt="@item.Title" />
            </td>
            <td>
                <a asp-area="" asp-controller="Products" asp-action="Index" asp-route-CategoryId="@item.Category.Id">@Html.DisplayFor(modelItem => item.Category.Name)</a>
            </td>

            <td>
                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
        }
    </tbody>
</table>
