@model IEnumerable<BookProject.Models.Author>

@{
    ViewData["Title"] = "Yazar Listesi";
}

<h1>Yazar Listesi</h1>

<p>
    <a class="btn btn-primary btn-sm" asp-action="Create">Yeni Yazar Ekle</a>
</p>
<table id="demoGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>
                Yazar Adı
            </th>
            <th>
                Hakkında
            </th>
            <th>
                İşlemler
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Fullname)
            </td>
            <td>
                <button type="button" class="btn btn-secondary btn-sm" data-toggle="tooltip" data-placement="top" title="@Html.DisplayFor(modelItem => item.About)">
                    Yazar Hakkında
                </button>
            </td>
            <td>
                <a class="btn btn-outline-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Düzenle</a>
                <a class="btn btn-outline-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Detay</a>
                <a class="btn btn-outline-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Sil</a>
            </td>
        </tr>
}
    </tbody>
</table>
